# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:8080

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/linkedin/callback

# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_CALLBACK_URL=http://localhost:3000/api/twitter/callback

# Session Configuration (for production)
# SESSION_SECRET=your_session_secret_key
# SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# CORS Configuration
# CORS_ORIGIN=http://localhost:8080
# CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX=100  # Limit each IP to 100 requests per window

# Logging
# LOG_LEVEL=info  # error, warn, info, debug

# Note: In production, make sure to set NODE_ENV=production
# and configure all required environment variables with proper values.
